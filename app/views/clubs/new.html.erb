<h2>Create a New Club</h2><br>

<% if @error_message %>
<p><%= "#{@error_message}" %></p>
<% end %>

<%= form_tag ({controller: "clubs", action: "create", method: "post"}) do %>

<label>Name:</label>
<%= text_field_tag "club[name]" %><br>

<label>Resident City:</label>
<%= text_field_tag "club[city]" %>

<label>Resident Nation:</label>
<%= text_field_tag "club[nation]" %>

<label>League/Division:</label>
<%= text_field_tag "club[league_division]" %>

<%= hidden_field_tag "club[user_id]", @user_id %><br>

<%= submit_tag "Create Club" %>
<% end %>
