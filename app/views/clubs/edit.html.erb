<h2>Edit Club</h2><br>

<% if @error_message %>
<p><%= "#{@error_message}" %></p>
<% end %>

<%= form_tag ({controller: "clubs", action: "update", method: "post"}) do %>

<label>Name:</label>
<%= text_field_tag "club[name]", @club.name %><br>

<label>Resident City:</label>
<%= text_field_tag "club[city]", @club.city %><br>

<label>Resident Nation:</label>
<%= text_field_tag "club[nation]", @club.nation %><br>

<label>League/Division:</label>
<%= text_field_tag "club[league_division]", @club.league_division %><br>

<%= hidden_field_tag "club[user_id]", @club.user_id %><br>

<%= hidden_field_tag "club[id]", @club.id %><br>

<%= submit_tag "Update Club" %>
<% end %>
