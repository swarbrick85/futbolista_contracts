<h2>Create a New Player</h2><br>

<% if @error_message %>
<p><%= "#{@error_message}" %></p>
<% end %>

<%= form_tag ({controller: "players", action: "create", method: "post"}) do %>

<label>Name:</label>
<%= text_field_tag "player[name]" %><br>

<label>Country of Origin:</label>
<%= text_field_tag "player[country_of_origin]" %><br>

<label>Position:</label>
<%= text_field_tag "player[position]" %><br>

<label>Agent:</label>
<%= collection_select :player, :agent_id, Agent.all, :id, :name %><br>

<label>Club:</label>
<%= collection_select :player, :club_id, Club.all, :id, :name %><br>

<%= hidden_field_tag "player[user_id]", @user_id %><br>

<%= submit_tag "Create Player" %>
<% end %>
